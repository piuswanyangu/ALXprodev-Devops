#!/bin/bash

DATA_DIR="pokemon_data"
CSV_FILE="pokemon_report.csv"

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$CSV_FILE"

# Loop through each PokÃ©mon JSON file
for file in "$DATA_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq '.height' "$file" | awk '{print $1/10}')
    weight=$(jq '.weight' "$file" | awk '{print $1/10}')

    echo "$name,$height,$weight" >> "$CSV_FILE"
done

echo "CSV Report generated at: $CSV_FILE"
echo

# Calculate averages using awk
awk -F',' '
NR>1 {
    total_height += $2
    total_weight += $3
    count++
}
END {
    printf "Average Height: %.2f m\n", total_height/count
    printf "Average Weight: %.2f kg\n", total_weight/count
}
' "$CSV_FILE"
